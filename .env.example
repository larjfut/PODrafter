# Environment configuration for PO Drafter
OPENAI_API_KEY=
# Allowed CORS origins (comma-separated URLs, wildcards * are rejected)
ALLOWED_ORIGINS=http://localhost:5173
REDIS_URL=redis://localhost:6379/0
CHAT_API_KEY=
VITE_CHAT_API_KEY=
ALLOWED_QR_HOSTS=
TRUSTED_PROXY_HOSTS=127.0.0.1
CHAT_RATE_LIMIT=20
OPENAI_TIMEOUT_SECONDS=20
OPENAI_MODEL=gpt-4o
# Set to 1 in production behind HTTPS to enable HSTS
ENABLE_HSTS=0
AUTH_SECRET=changeme
SESSION_TTL_SECONDS=3600
# Set to 1 to mark cookies Secure (requires HTTPS)
ENABLE_SECURE_COOKIES=0
SESSION_SAMESITE=Strict
SESSION_COOKIE_NAME=session
SESSION_COOKIE_DOMAIN=
ENVIRONMENT=development
METRICS_TOKEN=

# Example environment variables for local development
# Base path for the backend API used by the SvelteKit frontend
# e.g. /api or https://your-deploy.com/api
VITE_API_BASE_URL=/api

# Optional: OpenID Connect (OIDC) login
# Set OIDC_ENABLED=1 to enable, then fill in the rest
OIDC_ENABLED=0
OIDC_ISSUER_URL=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_REDIRECT_URI=
# Space-separated scopes
OIDC_SCOPES=openid email profile
